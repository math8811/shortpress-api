{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "overrides": {
    "api/main.py": {
      "buildCommand": "apt-get update && apt-get install -y libxml2-dev libxslt-dev"
    }
  },
  "build": {
    "env": {
      "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
    }
  }
}
