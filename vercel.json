{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "install-command": "apt-get update && apt-get install -y libxml2-dev libxslt-dev && pip install -r requirements.txt"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "app/main.py" }
  ],
  "build": {
    "env": {
      "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
    }
  }
}